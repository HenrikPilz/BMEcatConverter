>
<!ELEMENT SUPPLIER_NAME %STRING;>
<!ELEMENT AGREEMENT_ID %STRING;>
<!ELEMENT SUPPLIER_AID %STRING;>
<!ELEMENT DESCRIPTION_SHORT %STRING;>
<!ELEMENT DESCRIPTION_LONG %STRING;>
<!ELEMENT MANUFACTURER_TYPE_DESCR %STRING;>
