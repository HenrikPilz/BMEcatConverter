<!ELEMENT REFERENCE_FEATURE_SYSTEM_NAME %STRING;>
<!ELEMENT REFERENCE_FEATURE_GROUP_ID %STRING;>
<!ELEMENT FNAME %STRING;>
<!ELEMENT FVALUE %STRING;>
<!ELEMENT FUNIT %STRING;>
<!ELEMENT FORDER %INTEGER;>
