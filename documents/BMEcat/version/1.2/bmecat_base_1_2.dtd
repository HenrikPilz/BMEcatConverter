<!ELEMENT MIME_SOURCE %STRING;>
<!ELEMENT MIME_DESCR %STRING;>
<!ELEMENT MIME_ALT %STRING;>
<!ELEMENT MIME_PURPOSE %STRING;>
<!ELEMENT MIME_ORDER %INTEGER;>
