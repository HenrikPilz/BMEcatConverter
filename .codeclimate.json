{
  "version": "2",
  "plugins": {
    "duplication": {
      "enabled": true
    },
    "fixme": {
      "enabled": true
    },
    "pep8": {
      "enabled": true
    },
    "radon": {
      "enabled": true
    }
  } 
  "checks": {
    "argument-count": {
      "config": {
        "threshold": 5
      }
    },
    "method-count": {
      "config": {
     	  "threshold": 30
      }
    },
    "file-lines": {
      "config": {
     	  "threshold": 300
      }
    }
  }
}
